<div class="container">
  <div class="row">

    <button class="btn btn-info" type="button" data-toggle="collapse" data-target="#filterOptions" aria-expanded="false" aria-controls="filterOptions" ng-click="filterSwitch()" >
      <span ng-hide="filter_flag">Show Filters</span>
      <span ng-show="filter_flag">Hide Filters</span>
    </button>
</div>
<div class="filter_row_buffer"></div>
<div class="collapse" id="filterOptions">
   <div class="row">
    <div class="col-md-4">
      <span class="filter_title">Sort By</span>
        <span ng-show="bestmatch_flag" >Best Match</span>
        <span class="sort_pointer"ng-hide="bestmatch_flag" ng-click="sortFunction('bestmatch')" style="color: blue;">Best Match</span><br>
        <span ng-show="highestrate_flag">Highest Rated</span>
       <span class="sort_pointer" ng-hide="highestrate_flag" ng-click="sortFunction('highestrate')" style="color: blue;">Highest Rated </span>
    </div>
      <div class="col-md-4">
        <span class="filter_title">Categories</span>
          <input type="checkbox" ng-model="librariesclick" ng-click="optionsFilter(librariesclick, 'libraries')" ng-checked="librariesclick"> Libraries <br/>
         <input type="checkbox" ng-model="cafesclick" ng-click="optionsFilter(cafesclick, 'cafes')" ng-checked="cafesclick"> Cafes<br/>
         <input type="checkbox" ng-model="collegeclick" ng-click="optionsFilter(collegeclick, 'college')" ng-checked="collegeclick"> Colleges<br/><br><br>
      </div>
      <div class="col-md-4">
        <span class="filter_title">Internet</span>
        <input type="checkbox" ng-model="wificlick" ng-click="optionsFilter(wificlick, 'wifi')" ng-checked="wificlick"> Wifi
      </div>
</div>
</div>

<div class="filter_row_buffer"></div>
</div>